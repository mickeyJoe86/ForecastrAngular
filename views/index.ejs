<!Doctype html>
<html>
    <head>
        <title>My Site</title>
        <link rel="stylesheet" href="/app/assets/css/skeleton.css" />
        <link rel="stylesheet" href="/app/assets/css/app.css" />
    </head>
    <body ng-app="app">    
        <shared-header></shared-header>

        <div id="main-containter" ng-controller="HomeComponentController as $homeCtrl">
            <div id="currently">
                <p>Temperature: {{ $homeCtrl.currently.temperature }}&deg</p>
                <p>Precip: {{ $homeCtrl.currently.precipProbability }}&#37</p>
                <p>Description: {{ $homeCtrl.currently.summary }}</p>
            </div>
        </div>

        <shared-footer></shared-footer>
        <!--main angular-->
        <script src="/angular.min.js"></script>
        <!-- inject:js -->
        <script src="/app/app.module.js"></script>
        <script src="/app/components/components.module.js"></script>
        <script src="/app/shared/shared.module.js"></script>
        <script src="/app/components/home/homeService.js"></script>
        <script src="/app/shared/footer/footerDirective.js"></script>
        <script src="/app/shared/header/headerDirective.js"></script>
        <script src="/app/components/home/homeComponent.js"></script>
        <!-- endinject -->
    </body>
</html>